{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Bot",
            "program": "${workspaceFolder}/src/app.ts",
            "preLaunchTask": "npm: build - stockNews",
            "sourceMaps": true,
            "smartStep": true,
            "restart": true,
            "address": "127.0.0.1",
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceFolder}/.dev.env",
            "outFiles": [
                "${workspaceFolder}/bin/**/*.js"
            ]
        }
    ]
}
